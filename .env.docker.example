# =============================================================================
# Docker Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your values
# This file is loaded by docker-compose.yml
#
# Usage: cp .env.docker.example .env

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Development: DATABASE_URL is set in docker-compose.yml (PostgreSQL container)
# Production: Use managed database (AWS RDS, Azure Database, etc.)
DATABASE_URL=postgresql+asyncpg://user:password@host:5432/dbname

# =============================================================================
# SECURITY
# =============================================================================

# JWT Secret Key - MUST be 32+ random characters in production
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-min-32-chars-change-this

# CORS Origins (comma-separated, no spaces)
# Development: http://localhost:3000 (set in docker-compose.yml)
# Production: Your actual domain(s)
CORS_ORIGINS=http://localhost:3000,https://yourapp.com

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP Server Configuration
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key

# Email Sender Details
FROM_EMAIL=noreply@tariffnavigator.com
FROM_NAME=TariffNavigator

# =============================================================================
# APPLICATION URLS
# =============================================================================

# Frontend URL (for email links, redirects, etc.)
FRONTEND_URL=https://yourapp.com

# =============================================================================
# API KEYS
# =============================================================================

# OpenAI API Key (for AI features)
OPENAI_API_KEY=sk-...

# =============================================================================
# STRIPE PAYMENT PROCESSING
# =============================================================================

# Stripe API Keys (test or live)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Price IDs
STRIPE_PRICE_ID_PRO=price_...
STRIPE_PRICE_ID_ENTERPRISE=price_...

# =============================================================================
# FRONTEND BUILD CONFIGURATION
# =============================================================================

# API URL for frontend build
# Development: http://localhost:8000/api/v1 (set in docker-compose.yml)
# Production: Your backend API URL
VITE_API_URL=https://api.yourapp.com/api/v1

# =============================================================================
# NOTES
# =============================================================================
#
# - Never commit .env files to git
# - Use different keys for development and production
# - Rotate keys regularly in production
# - Keep backup of production keys in secure vault
#
# For local development:
# 1. Copy this file: cp .env.docker.example .env
# 2. Fill in required API keys (OPENAI_API_KEY, STRIPE keys, SMTP)
# 3. Run: docker-compose up
#
# For production deployment:
# 1. Use environment variables directly (AWS ECS, Azure, etc.)
# 2. OR create .env file with production values
# 3. Run: docker-compose -f docker-compose.prod.yml up -d
#
